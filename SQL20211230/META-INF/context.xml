<Context>
	<Resource name = "jdbc/testdb"
				auth = "Container"
				type = "javax.sql.DataSource"
				driverClassName = "com.mysql.jdbc.Driver"
				url = "jdbc:mysql://localhost:3306/testdb?serverTimeZone=UTC" 
				username = "root"
				password = "0000"
				maxTotal = "16"
				maxIdel = "4"
				maxWaitMillis = "-1">
	</Resource>
</Context>